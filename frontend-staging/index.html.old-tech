    <style>
        /* ==================== ROOT VARIABLES ==================== */
        :root {
            /* Colors */
            --chika-primary: #6366f1;
            --chika-secondary: #8b5cf6;
            --chika-accent: #10b981;
            --chika-warning: #f59e0b;
            --chika-error: #ef4444;
            
            /* Backgrounds */
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --bg-hover: #334155;
            --bg-input: #0f172a;
            
            /* Text */
            --text-primary: #f1f5f9;
            --text-secondary: #cbd5e1;
            --text-muted: #64748b;
            
            /* Gradients */
            --gradient-primary: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --gradient-cta: linear-gradient(135deg, #10b981 0%, #059669 100%);
            --gradient-hero: radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.15), transparent 70%);
            
            /* Spacing */
            --space-xs: 8px;
            --space-sm: 16px;
            --space-md: 24px;
            --space-lg: 48px;
            --space-xl: 96px;
            
            /* Border Radius */
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
            
            /* Shadows */
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.2);
            --shadow-lg: 0 10px 40px rgba(0, 0, 0, 0.3);
            --shadow-glow: 0 0 40px rgba(99, 102, 241, 0.3);
        }
        
        /* ==================== RESET & BASE ==================== */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        
        /* ==================== TYPOGRAPHY ==================== */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: var(--space-md);
        }
        
        h1 {
            font-size: clamp(2.5rem, 5vw, 4rem);
        }
        
        h2 {
            font-size: clamp(2rem, 4vw, 3rem);
        }
        
        h3 {
            font-size: clamp(1.5rem, 3vw, 2rem);
        }
        
        p {
            font-size: 1.125rem;
            line-height: 1.8;
            color: var(--text-secondary);
        }
        
        a {
            color: var(--chika-primary);
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        a:hover {
            color: var(--chika-secondary);
        }
        
        /* ==================== UTILITIES ==================== */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 var(--space-md);
        }
        
        .container-wide {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 var(--space-md);
        }
        
        .section {
            padding: var(--space-xl) 0;
        }
        
        .gradient-text {
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .text-center {
            text-align: center;
        }
        
        /* ==================== PRE-HEADER (Sticky Bar) ==================== */
        .pre-header {
            background: rgba(99, 102, 241, 0.1);
            border-bottom: 1px solid rgba(99, 102, 241, 0.2);
            padding: var(--space-sm) 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }
        
        .pre-header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: var(--space-md);
        }
        
        .beta-badge {
            display: inline-flex;
            align-items: center;
            gap: var(--space-xs);
            background: var(--gradient-primary);
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.875rem;
        }
        
        .waitlist-count {
            color: var(--text-muted);
            font-size: 0.875rem;
        }
        
        .waitlist-count strong {
            color: var(--chika-accent);
            font-weight: 700;
        }
        
        /* ==================== BUTTONS ==================== */
        .btn {
            display: inline-block;
            padding: 16px 32px;
            font-size: 1.125rem;
            font-weight: 600;
            border-radius: var(--radius-md);
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            text-decoration: none;
        }
        
        .btn-primary {
            background: var(--gradient-cta);
            color: white;
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(16, 185, 129, 0.4);
        }
        
        .btn-secondary {
            background: transparent;
            color: var(--chika-primary);
            border: 2px solid var(--chika-primary);
        }
        
        .btn-secondary:hover {
            background: rgba(99, 102, 241, 0.1);
        }
        
        .btn-large {
            padding: 20px 48px;
            font-size: 1.25rem;
        }
        
        .btn-small {
            padding: 10px 20px;
            font-size: 0.875rem;
        }
        
        /* ==================== HERO SECTION ==================== */
        .hero {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: var(--space-xl) var(--space-md);
            background: var(--gradient-hero);
            position: relative;
            overflow: hidden;
        }
        
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(99, 102, 241, 0.1) 0%, transparent 70%);
            transform: translateX(-50%);
            animation: pulse 8s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 0.3; transform: translateX(-50%) scale(1); }
            50% { opacity: 0.5; transform: translateX(-50%) scale(1.1); }
        }
        
        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 900px;
        }
        
        .logo-large {
            margin-bottom: var(--space-lg);
        }
        
        .logo-icon {
            font-size: 5rem;
            margin-bottom: var(--space-sm);
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .hero h1 {
            margin-bottom: var(--space-md);
            line-height: 1.1;
        }
        
        .hero .tagline {
            font-size: 1.5rem;
            color: var(--text-secondary);
            margin-bottom: var(--space-lg);
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .demo-preview {
            width: 100%;
            max-width: 900px;
            height: 500px;
            background: var(--bg-card);
            border-radius: var(--radius-lg);
            margin: var(--space-lg) 0;
            box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(99, 102, 241, 0.2);
        }
        
        .demo-preview::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(from 0deg, transparent, rgba(99, 102, 241, 0.3), transparent);
            animation: rotate 8s linear infinite;
        }
        
        @keyframes rotate {
            100% { transform: rotate(360deg); }
        }
        
        .demo-placeholder {
            position: relative;
            z-index: 1;
            font-size: 3rem;
            opacity: 0.5;
        }
        
        .cta-container {
            display: flex;
            gap: var(--space-md);
            justify-content: center;
            flex-wrap: wrap;
            margin: var(--space-lg) 0;
        }
        
        .hero-footer {
            margin-top: var(--space-lg);
            color: var(--text-muted);
            font-size: 1rem;
        }
        
        .hero-footer strong {
            color: var(--chika-accent);
        }
        
        /* ==================== SOCIAL PROOF BAR ==================== */
        .social-proof {
            background: rgba(255, 255, 255, 0.02);
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: var(--space-lg) 0;
        }
        
        .social-proof-content {
            text-align: center;
        }
        
        .social-proof-title {
            color: var(--text-muted);
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: var(--space-md);
        }
        
        .social-logos {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: var(--space-lg);
            flex-wrap: wrap;
            margin-bottom: var(--space-md);
        }
        
        .social-logo {
            font-size: 2rem;
            opacity: 0.6;
            transition: opacity 0.3s ease;
        }
        
        .social-logo:hover {
            opacity: 1;
        }
        
        .github-stars {
            display: inline-flex;
            align-items: center;
            gap: var(--space-xs);
            background: rgba(99, 102, 241, 0.1);
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.875rem;
            margin-top: var(--space-md);
        }
        
        /* ==================== PROBLEM SECTION ==================== */
        .problem-section {
            background: linear-gradient(180deg, var(--bg-dark) 0%, rgba(239, 68, 68, 0.05) 100%);
        }
        
        .problem-title {
            text-align: center;
            font-size: 3rem;
            margin-bottom: var(--space-xl);
        }
        
        .problem-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: var(--space-lg);
            margin-top: var(--space-xl);
        }
        
        .problem-card {
            background: var(--bg-card);
            padding: var(--space-lg);
            border-radius: var(--radius-lg);
            border-left: 4px solid var(--chika-error);
            transition: transform 0.3s ease;
        }
        
        .problem-card:hover {
            transform: translateY(-5px);
        }
        
        .problem-card h3 {
            color: var(--chika-error);
            font-size: 1.5rem;
            margin-bottom: var(--space-md);
        }
        
        .problem-card p {
            color: var(--text-secondary);
        }
        
        .problem-conclusion {
            text-align: center;
            margin-top: var(--space-xl);
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--chika-error), var(--chika-warning));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        /* ==================== SOLUTION SECTION ==================== */
        .solution-section {
            background: var(--bg-dark);
        }
        
        .solution-intro {
            text-align: center;
            max-width: 800px;
            margin: 0 auto var(--space-xl);
        }
        
        .solution-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: var(--space-lg);
            margin-top: var(--space-xl);
        }
        
        .solution-card {
            background: var(--bg-card);
            padding: var(--space-lg);
            border-radius: var(--radius-lg);
            border-left: 4px solid var(--chika-accent);
            transition: all 0.3s ease;
        }
        
        .solution-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.2);
        }
        
        .solution-icon {
            font-size: 3rem;
            margin-bottom: var(--space-md);
        }
        
        .solution-card h3 {
            color: var(--chika-accent);
            font-size: 1.5rem;
            margin-bottom: var(--space-md);
        }
        
        /* ==================== HOW IT WORKS ==================== */
        .how-it-works {
            background: rgba(99, 102, 241, 0.02);
        }
        
        .steps-container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .step {
            display: flex;
            gap: var(--space-lg);
            margin-bottom: var(--space-xl);
            align-items: flex-start;
        }
        
        .step-number {
            flex-shrink: 0;
            width: 60px;
            height: 60px;
            background: var(--gradient-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: 800;
        }
        
        .step-content {
            flex: 1;
        }
        
        .step-title {
            font-size: 1.75rem;
            margin-bottom: var(--space-md);
        }
        
        .step-visual {
            background: var(--bg-card);
            padding: var(--space-lg);
            border-radius: var(--radius-md);
            margin-top: var(--space-md);
            border: 1px solid rgba(99, 102, 241, 0.2);
        }
        
        .ai-bubble {
            background: rgba(99, 102, 241, 0.1);
            border: 1px solid var(--chika-primary);
            padding: var(--space-md);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-sm);
        }
        
        .ai-name {
            font-weight: 600;
            color: var(--chika-primary);
            margin-bottom: var(--space-xs);
        }
        
        /* ==================== COMPARISON TABLE ==================== */
        .comparison-section {
            background: var(--bg-dark);
        }
        
        .comparison-table {
            background: var(--bg-card);
            border-radius: var(--radius-lg);
            overflow: hidden;
            border: 1px solid rgba(99, 102, 241, 0.2);
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th {
            background: var(--gradient-primary);
            color: white;
            padding: var(--space-md);
            font-weight: 700;
            text-align: left;
        }
        
        td {
            padding: var(--space-md);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        tr:last-child td {
            border-bottom: none;
        }
        
        tr:hover {
            background: rgba(99, 102, 241, 0.05);
        }
        
        .chika-column {
            background: rgba(16, 185, 129, 0.05);
            border-left: 2px solid var(--chika-accent);
            font-weight: 600;
        }
        
        .checkmark {
            color: var(--chika-accent);
            font-size: 1.25rem;
        }
        
        .xmark {
            color: var(--chika-error);
            font-size: 1.25rem;
        }
        
        .partial {
            color: var(--chika-warning);
            font-size: 1.25rem;
        }
        
        /* ==================== PRICING ==================== */
        .pricing-section {
            background: rgba(99, 102, 241, 0.02);
        }
        
        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: var(--space-lg);
            margin-top: var(--space-xl);
        }
        
        .pricing-card {
            background: var(--bg-card);
            border-radius: var(--radius-lg);
            padding: var(--space-lg);
            border: 2px solid rgba(99, 102, 241, 0.1);
            transition: all 0.3s ease;
            position: relative;
        }
        
        .pricing-card:hover {
            transform: translateY(-10px);
            border-color: var(--chika-primary);
            box-shadow: 0 20px 40px rgba(99, 102, 241, 0.3);
        }
        
        .pricing-card.featured {
            border-color: var(--chika-accent);
            box-shadow: 0 10px 40px rgba(16, 185, 129, 0.2);
        }
        
        .pricing-badge {
            position: absolute;
            top: -12px;
            right: 20px;
            background: var(--gradient-cta);
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }
        
        .pricing-title {
            font-size: 1.5rem;
            margin-bottom: var(--space-sm);
        }
        
        .pricing-price {
            font-size: 3rem;
            font-weight: 800;
            margin: var(--space-md) 0;
        }
        
        .pricing-price small {
            font-size: 1rem;
            color: var(--text-muted);
        }
        
        .pricing-features {
            list-style: none;
            margin: var(--space-lg) 0;
        }
        
        .pricing-features li {
            padding: var(--space-sm) 0;
            display: flex;
            align-items: center;
            gap: var(--space-sm);
        }
        
        .pricing-features li::before {
            content: 'âœ“';
            color: var(--chika-accent);
            font-weight: 700;
            font-size: 1.25rem;
        }
        
        .pricing-cta {
            width: 100%;
            margin-top: var(--space-lg);
        }
        
        .pricing-note {
            text-align: center;
            margin-top: var(--space-xl);
            padding: var(--space-lg);
            background: rgba(99, 102, 241, 0.05);
            border-radius: var(--radius-md);
        }
        
        /* ==================== WAITLIST SECTION ==================== */
        .waitlist-section {
            background: linear-gradient(135deg, var(--bg-card), rgba(99, 102, 241, 0.05));
            padding: var(--space-xl) 0;
        }
        
        .waitlist-content {
            max-width: 700px;
            margin: 0 auto;
            text-align: center;
        }
        
        .waitlist-form {
            display: flex;
            gap: var(--space-md);
            margin: var(--space-lg) 0;
        }
        
        .waitlist-input {
            flex: 1;
            padding: var(--space-md);
            font-size: 1.125rem;
            background: var(--bg-input);
            border: 2px solid rgba(99, 102, 241, 0.3);
            border-radius: var(--radius-md);
            color: var(--text-primary);
            transition: border-color 0.3s ease;
        }
        
        .waitlist-input:focus {
            outline: none;
            border-color: var(--chika-primary);
        }
        
        .waitlist-stats {
            margin-top: var(--space-lg);
            color: var(--text-muted);
        }
        
        .waitlist-stats strong {
            color: var(--chika-accent);
            font-size: 2rem;
            display: block;
            margin-bottom: var(--space-xs);
        }
        
        .waitlist-benefits {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-md);
            margin-top: var(--space-lg);
        }
        
        .benefit {
            padding: var(--space-md);
            background: rgba(16, 185, 129, 0.05);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
        }
        
        /* ==================== FAQ ==================== */
        .faq-section {
            background: var(--bg-dark);
        }
        
        .faq-container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .faq-item {
            background: var(--bg-card);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-md);
            overflow: hidden;
            border: 1px solid rgba(99, 102, 241, 0.1);
        }
        
        .faq-question {
            padding: var(--space-lg);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            font-size: 1.125rem;
            transition: background 0.3s ease;
        }
        
        .faq-question:hover {
            background: rgba(99, 102, 241, 0.05);
        }
        
        .faq-icon {
            font-size: 1.5rem;
            transition: transform 0.3s ease;
        }
        
        .faq-item.active .faq-icon {
            transform: rotate(180deg);
        }
        
        .faq-answer {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            padding: 0 var(--space-lg);
        }
        
        .faq-item.active .faq-answer {
            max-height: 500px;
            padding: 0 var(--space-lg) var(--space-lg);
        }
        
        /* ==================== FOOTER ==================== */
        .footer {
            background: rgba(0, 0, 0, 0.3);
            border-top: 1px solid rgba(99, 102, 241, 0.1);
            padding: var(--space-xl) 0 var(--space-lg);
        }
        
        .footer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-lg);
            margin-bottom: var(--space-lg);
        }
        
        .footer-column h4 {
            font-size: 1rem;
            margin-bottom: var(--space-md);
            color: var(--chika-primary);
        }
        
        .footer-links {
