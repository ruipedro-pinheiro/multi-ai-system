    <script>
        // ========== DEMO FUNCTIONS (Global scope for inline onclick) ==========
        function askHeroQuestion(question) {
            try {
                const input = document.getElementById('hero-input');
                if (!input) {
                    console.error('âŒ Input field not found!');
                    return;
                }
                input.value = question;
                sendHeroMessage();
            } catch (error) {
                console.error('âŒ Error in askHeroQuestion:', error);
                alert('Demo error. Please refresh the page.');
            }
        }
        
        async function sendHeroMessage() {
            try {
                const input = document.getElementById('hero-input');
                if (!input) {
                    console.error('âŒ Input not found');
                    return;
                }
                
                const message = input.value.trim();
                if (!message) return;
                
                const messagesDiv = document.getElementById('hero-messages');
                if (!messagesDiv) {
                    console.error('âŒ Messages container not found');
                    return;
                }
            
                // Clear welcome if first message
                if (messagesDiv.querySelector('h4')) {
                    messagesDiv.innerHTML = '';
                }
                
                // Add user message
                addHeroMessage('user', message);
                input.value = '';
                
                // ANIMATED AI COLLABORATION STATUS
                const loadingId = 'loading-' + Date.now();
                
                // Cycle through collaboration steps
                const statusSteps = [
                    'ðŸ” SmartRouter analyzing question...',
                    'ðŸ¤– GPT-4 processing...',
                    'ðŸ§  Claude reviewing context...',
                    'âœ¨ Gemini synthesizing...',
                    'ðŸŽ¯ Finalizing answer...'
                ];
                
                let currentStep = 0;
                addHeroMessage('system', statusSteps[0], loadingId);
                
                // Update status every 1.2 seconds
                const statusInterval = setInterval(() => {
                    currentStep++;
                    if (currentStep < statusSteps.length) {
                        const loadingEl = document.getElementById(loadingId);
                        if (loadingEl) {
                            const textEl = loadingEl.querySelector('div');
                            if (textEl) {
                                textEl.textContent = statusSteps[currentStep];
                            }
                        }
                    }
                }, 1200);
                
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 30000);
                
                const response = await fetch('https://chika-backend-r3ue.onrender.com/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ content: message }),
                    signal: controller.signal
                }).catch(err => {
                    throw new Error(`Network error: ${err.message}`);
                });
                
                clearInterval(statusInterval);
                clearTimeout(timeoutId);
                
                if (!response.ok) {
                    const errorText = await response.text().catch(() => 'Unknown error');
                    throw new Error(`Backend error (${response.status}): ${errorText}`);
                }
                
                const data = await response.json().catch(() => {
                    throw new Error('Invalid JSON response from backend');
                });
                
                // Remove loading
                document.getElementById(loadingId)?.remove();
                
                if (!data.ai_responses || data.ai_responses.length === 0) {
                    throw new Error('No AI responses received');
                }
                
                // Add AI responses with delay
                data.ai_responses.forEach((aiResp, index) => {
                    setTimeout(() => {
                        try {
                            addHeroMessage('ai', aiResp.content, null, aiResp.ai.toUpperCase());
                        } catch (err) {
                            console.error('âŒ Error adding AI message:', err);
                        }
                    }, index * 400);
                });
                
            } catch (error) {
                console.error('âŒ Demo error:', error);
                document.getElementById(loadingId)?.remove();
                
                let errorMsg = 'âŒ ';
                if (error.name === 'AbortError') {
                    errorMsg += 'Request timeout (30s). Backend might be starting up. Try again in a moment.';
                } else if (error.message.includes('429')) {
                    errorMsg += 'Rate limit hit. Please wait 60 seconds and try again.';
                } else if (error.message.includes('Network error')) {
                    errorMsg += 'Cannot reach backend. Check your internet connection.';
                } else if (error.message.includes('Backend error')) {
                    errorMsg += error.message;
                } else {
                    errorMsg += `Unexpected error: ${error.message}`;
                }
                
                addHeroMessage('system', errorMsg);
                
                // Add retry button
                const retryBtn = document.createElement('button');
                retryBtn.textContent = 'ðŸ”„ Retry';
                retryBtn.className = 'btn btn-small';
                retryBtn.style.marginTop = '12px';
                retryBtn.onclick = () => {
                    input.value = message;
                    sendHeroMessage();
                };
                const messagesDiv = document.getElementById('hero-messages');
                if (messagesDiv) {
                    messagesDiv.appendChild(retryBtn);
                }
            }
        }
        
        function addHeroMessage(type, content, id, aiName) {
            try {
                const messagesDiv = document.getElementById('hero-messages');
                if (!messagesDiv) {
                    console.error('âŒ Messages container not found');
                    return;
                }
                
                const msgId = id || 'msg-' + Date.now();
            
            let html = '';
            if (type === 'user') {
                html = `<div class="message user" id="${msgId}" style="display: flex; justify-content: flex-end; margin: 8px 0;">
                    <div style="background: var(--chika-primary); color: white; padding: 14px 18px; border-radius: 16px; max-width: 75%; box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);">
                        ${content}
                    </div>
                </div>`;
            } else if (type === 'ai') {
                const colors = {
                    'GPT': '#6366f1',
                    'GEMINI': '#10b981',
                    'OLLAMA': '#f59e0b',
                    'CLAUDE': '#8b5cf6',
                    'CHIKA': 'linear-gradient(135deg, #6366f1, #10b981)',  // Collaborative gradient
                    'GPT-4': '#6366f1'
                };
                const color = colors[aiName] || colors[aiName.toUpperCase()] || '#6366f1';
                
                html = `<div class="message ai" id="${msgId}" style="display: flex; gap: 12px; align-items: start; margin: 8px 0;">
                    <div style="background: ${color}; width: 36px; height: 36px; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
                        <i data-lucide="cpu" style="width: 20px; height: 20px; color: white;"></i>
                    </div>
                    <div style="flex: 1;">
                        <div style="font-size: 0.75rem; color: var(--text-muted); margin-bottom: 6px; font-weight: 600;">${aiName}</div>
                        <div style="background: var(--bg-hover); padding: 14px 18px; border-radius: 16px; color: var(--text-primary); line-height: 1.6;">
                            ${content}
                        </div>
                    </div>
                </div>`;
            } else {
                // System/status messages - HIGH CONTRAST with gradient background
                html = `<div class="message system" id="${msgId}" style="text-align: center; margin: 16px auto; padding: 12px 24px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(139, 92, 246, 0.15)); border: 1px solid rgba(99, 102, 241, 0.3); border-radius: 12px; color: var(--chika-primary); font-size: 0.95rem; font-weight: 600; max-width: 400px; box-shadow: 0 2px 8px rgba(99, 102, 241, 0.2);">
                    ${content}
                </div>`;
            }
            
                messagesDiv.insertAdjacentHTML('beforeend', html);
                
                // Smooth scroll to bottom (always show latest message)
                setTimeout(() => {
                    messagesDiv.scrollTo({
                        top: messagesDiv.scrollHeight,
                        behavior: 'smooth'
                    });
                }, 100);
                
                // Re-init Lucide icons
                if (typeof lucide !== 'undefined') {
                    try {
                        lucide.createIcons();
                    } catch (err) {
                        console.warn('âš ï¸ Lucide icons init failed:', err);
                    }
                }
            } catch (error) {
                console.error('âŒ Error adding message:', error);
            }
        }

