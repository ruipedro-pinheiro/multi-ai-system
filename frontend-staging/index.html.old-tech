    <!-- Dynamic Backend Status Checker -->
    <script>
        let backendStatus = 'checking'; // checking, online, offline
        
        // Update status badge UI
        function updateStatusBadge(status) {
            const badge = document.getElementById('status-badge');
            const dot = document.getElementById('status-dot');
            const text = document.getElementById('status-text');
            
            if (!badge || !dot || !text) return;
            
            if (status === 'online') {
                badge.style.color = '#10b981';
                dot.style.background = '#10b981';
                text.textContent = 'Live';
            } else if (status === 'offline') {
                badge.style.color = '#ef4444';
                dot.style.background = '#ef4444';
                text.textContent = 'Offline';
                dot.style.animation = 'none';
            } else {
                badge.style.color = '#f59e0b';
                dot.style.background = '#f59e0b';
                text.textContent = 'Checking...';
            }
        }
        
        // Check backend health
        async function checkBackendHealth() {
            try {
                const response = await fetch('https://chika-backend-r3ue.onrender.com/health', {
                    method: 'GET',
                    signal: AbortSignal.timeout(3000)
                });
                
                if (response.ok) {
                    const data = await response.json();
                    console.log('âœ… Backend online:', data.available_ais);
                    backendStatus = 'online';
                    updateStatusBadge('online');
                    return true;
                } else {
                    console.warn('âš ï¸ Backend error:', response.status);
                    backendStatus = 'offline';
                    updateStatusBadge('offline');
                    return false;
                }
            } catch (error) {
                console.warn('âŒ Backend offline:', error.message);
                backendStatus = 'offline';
                updateStatusBadge('offline');
                return false;
            }
        }
        
        // Check on load
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
                checkBackendHealth();
                // Re-check every 10 seconds
                setInterval(checkBackendHealth, 10000);
            });
        } else {
            checkBackendHealth();
            setInterval(checkBackendHealth, 10000);
        }
    </script>
